---
//import ThemeIcon from "../theme/ThemeIcon.astro";
import ThemeIconReact from "../theme/ThemeIconReact";

export interface NavItem {
  name: string;
  path: string;
}
let activeIndex = Astro.locals.activeIndex; // Índice del elemento activo
let name = Astro.locals.name; // Índice del elemento activo

console.log(activeIndex);
const links: NavItem[] = [
  { name: "Home", path: "/" },
  { name: "About", path: "/about" },
  { name: "Blog", path: "/blog" },
  { name: "Tags", path: "/tags" },
]; // Elementos del nav
---

<nav class="mb-3 p-7 shadow-md w-full flex gap-3 justify-center relative">
  <!-- <ul class="flex gap-2 justify-center">
    <li><a href="/">Inicio</a></li>
    <li><a href="/about/">Sobre mi</a></li>
  </ul> -->
  <ul class="inline-flex gap-3">
    {
      links.map((item, index) => (
        <li
          class={
            activeIndex === index
              ? "bg-gray-200 text-gray-800"
              : "text-gray-600"
          }
        >
          <a href={item.path}>{item.name}</a>
        </li>
      ))
    }
  </ul>
  <div class="absolute right-4 inline-flex gap-3">
    <!-- <ThemeIcon /> -->
    <ThemeIconReact client:load />
  </div>
</nav>
